                                    </select>
                                </div>

                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input"> I agree to all Terms & Conditions
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-3 d-grid gap-2">
                                    <button class="btn btn-block btn-primary btn-lg fw-medium auth-form-btn" id="registerSubmit" type="submit">SIGN UP</button>
                                </div>
                                <div class="text-center mt-4 fw-light">
                                    Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary">Login</a>
                                </div>
                            </form>
                            <section>
                                <h3>Use another service to register.</h3>
                                <hr />
